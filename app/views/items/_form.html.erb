<%= simple_form_for(@item, :html => { :class => 'form-inline' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, placeholder: 'Enter Item Name'%>
    <%= f.input :item_code, placeholder: 'Enter Item code' %>
    <%= f.submit 'Add Item', class: 'btn btn-primary' %>
  </div>

  <div class="form-actions">
    
  </div>
<% end %>
